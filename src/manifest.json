{
    "name": "Ddict Translate: Translator - Dictionary",
    "version": "4.0.0",
    "description": "Ddict helps you instantly translate text on websites by a double click or a keypress.",
    "manifest_version": 2,
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+Shift+D"
            }
        }
    },
    "permissions": [
        "notifications",
        "contextMenus",
        "http://translate.google.com/*",
        "https://translate.google.com/*",
        "https://*.ddict.me/*",
        "http://*.ddict.me/*"
    ],
    "background": {
        "scripts": ["/background/index.js"]
    },
    "options_ui": {
        "page": "/option/index.html",
        "open_in_tab": true
    },
    "browser_action": {
        "default_title": "Ddict Translate: Translator - Dictionary",
        "default_icon": "/logo/icon.png",
        "default_popup": "/popup/index.html"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "matches": ["*://*/*", "file:///*/*"],
            "js": [
                "/content/dom.js",
                "/content/scrollleft.js",
                "/content/scrolltop.js",
                "/content/selected_text.js",
                "/content/bubble.js",
                "/content/index.js"
            ],
            "css": ["/content/style.css"]
        }
    ],
    "icons": {
        "16": "/logo/16.png",
        "48": "/logo/48.png",
        "128": "/logo/icon.png"
    },
    "web_accessible_resources": [
        "img/spin.gif",
        "img/audio.png",
        "logo/16.png"
    ],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com 'unsafe-eval'; object-src 'self'"
}